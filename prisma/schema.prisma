generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Job {
  id        String    @id @default(uuid())
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  company   String
  location  String
  link      String?   @default("")
  mode      String
  type      String
  position  String
  note      String?   @default("")
  status    JobStatus
  contract  String
}

enum JobStatus {
  pendiente
  entrevista
  rechazado
}
